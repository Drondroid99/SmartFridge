<Window x:Class="SmartFridge.ListOfRecipes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartFridge"
        mc:Ignorable="d"
        d:DesignHeight="800" d:DesignWidth="1000"
      Title="Список рецептов"
      FontFamily="Verdana"
      FontSize="16">
    
   
    
    <Grid>
        <ListBox FontFamily="Verdana" SelectionMode="Single" Margin="50" ItemsSource="{Binding RecipesList}" SelectedItem="{Binding SelectedRecipe}"/>
    </Grid>
</Window>
